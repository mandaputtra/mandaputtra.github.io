<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ renderData.title or title or metadata.title }}</title>
  <meta property="og:title" content="{{ renderData.title or title or metadata.title }}">

  <meta property="description" content="{{ renderData.description or description or metadata.description }}">
  <meta property="og:description" content="{{ renderData.description or description or metadata.description }}">
  <link rel="stylesheet" href="{{ '/css/reset.css' | url }}">
  <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
  <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
  <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  <link rel="shortcut icon" href="{{ metadata.favicon }}" type="image/x-icon">
  <link rel="icon" href="{{ metadata.favicon }}" type="image/x-icon">

  <meta property="twitter:image" content="{{metadata.social_image}}">
  <meta property="twitter:card" content="summary">
  <meta property="og:image:width" content="{{metadata.social_image_width}}">
  <meta property="og:image:height" content="{{metadata.social_image_height}}">
  <meta property="og:image" content="{{metadata.social_image}}">
  <meta property="twitter:image:alt" content="Full stuck developer">
</head>

<body>
  <main>
    <header class="header-wrapper">
      <h1>
        <a href="{{ '/' | url }}">
          {{ metadata.heading }}
        </a>
      </h1>
      <ul>
        {%- for nav in collections.nav | reverse -%}
        <li>
          <a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a>
        </li>
        {%- endfor -%}
      </ul>
    </header>

    <section>
      <div>
        {{ content | safe }}
      </div>
    </section>

    <footer class="footer-wrapper">
      <div>
        <ul>
          {% for social in metadata.author.socials %}
            <li>
              <a href="{{ social.handle }}"> {{ social.text }} </a> </li>
          {% else %}
            <li>Ho, call me if you find me on socials media - thats not me</li>
          {% endfor %}
        </ul>
      </div>
    </footer>

  </main>
</body>

</html>
