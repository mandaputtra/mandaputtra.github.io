---
layout: layouts/base.njk
---


<article>
  <header>
    <h1>{{ title }}</h1>
    {% for tag in tags %}
      {% set tagUrl %}
        /tags/{{ tag }}/
      {% endset %}
      {% if tag !== 'posts' && tag !== 'nav' %}
        <a class="postlist-tag" href="{{ tagUrl | url }}">{{ tag }}</a>
      {% endif %}
    {% endfor %}
    {% if date %}
      <h2>{{ date | readableDate }}</h2>
    {% endif %}
  </header>
  <div>
    <div>
      {{ content | safe }}
    </div>
  </div>
</article>
<p><a href="{{ '/' | url }}">← Home</a></p>
