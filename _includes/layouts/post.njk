---
layout: layouts/base.njk
---


<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <h2 class="post-date">{{ date | readableDate }}</h2>
  </header>
  <div class="post-body">
    <div class="post-content">
      {{ content | safe }}
    </div>
  </div>
</article>
<p><a href="{{ '/' | url }}">← Home</a></p>
